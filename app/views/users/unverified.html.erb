<div id="unverified-page">

  <div class="page-title-container">
    <div class="page-title">
      <div class="page-title-title">
        Bookclicker
       </div>
       <div class="page-title-small-title">
         Verify Your Info
       </div>
       <% if !@user.email_verified? %>
       <div class="page-title-subtitle">
          If your email address is correct below you should have received a verification email.<br/>  Otherwise, please update your email address below and expect the verification email shortly.
       </div>
       <% end %>

    </div>
  </div>
  <div class="space1">&nbsp;</div>

  <div class="user-info-form-container">
    <div id="EmailVerifier"
      data-user="<%= @user.as_json(only: [:first_name, :last_name], methods: [:email_unless_banned]).to_json %>">
    </div>
  </div>


</div>

